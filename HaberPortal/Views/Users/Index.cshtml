@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <div id="progress"></div>


        <table class="table table-striped" id="tbUsers">
            <thead>
                <tr>
                    <th>Adı Soyadı</th>
                    <th>Kullanıcı Adı</th>
                    <th>E-Mail</th>
                    <th>Yetki</th>
                </tr>
            </thead>
            <tbody>
            </tbody>

        </table>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            LoadUsers();

            function LoadUsers() {

                $.ajax({
                    url: "/Users/UserListAjax",
                    type: "Get",
                    data: {},
                    success: function (data) {
                        $.each(data, function (index, item) {

                            var cl = "";
                            if (item.role == "Admin") {
                                cl = "primary";
                            } else {
                                cl = "secondary";
                            }

                            var user = '<tr><td>' + item.fullName + '</td><td>' + item.userName + '</td><td>' + item.email + '</td><td><span class="badge bg-' + cl + '"> ' + item.role+ ' </span> </td>';

                            $("#tbUsers tbody").append(user);
                        });
                    },
                    error: function (e) {
                        console.log(e);
                    },
                });

            }

        });
    </script>
}