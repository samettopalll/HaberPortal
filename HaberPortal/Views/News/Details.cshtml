@model HaberPortal.Models.News

@{
    ViewData["Title"] = Model.Title;
}


<div>
    <dl class="row">
        <dd class="col-sm-10">
            <img src="~/newsPhotos/@Model.PhotoUrl" style="width:1000px; height:300px">
        </dd> 
        <dd class = "col-sm-10">
            <h3>@Html.DisplayFor(model => model.Title)</h3>
        </dd>
        <dd class = "col-sm-10">
            <h5>@Html.DisplayFor(model => model.Description)</h5>
        </dd> 
        <dd class = "col-sm-10">
            <p>@Html.DisplayFor(model => model.Content)</p>
        </dd>
    </dl>
</div>
<p>Reading time:&nbsp;</p>
<p class="has-text-info" id="readingTime">0 min read</p>

